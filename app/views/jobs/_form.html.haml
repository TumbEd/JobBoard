= simple_form_for(@job, html: { class: 'from-horizontal'}) do |f|
 = f.collection_select :category_id, Category.all, :id, :name, {promt: "Chose a Category"}
 = f.input :title, label: "Job title"
 = f.input :description, label: "Job description"
 = f.input :company, label: "Your company"
 = f.input :url, label: "Link to job"
 %br/
 = f.button :submit 